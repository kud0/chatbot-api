# WhatsApp Cloud API Configuration
# Get these from Meta for Developers: https://developers.facebook.com/apps/

# Your WhatsApp Business Account phone number ID
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# WhatsApp API access token (long-lived recommended)
WHATSAPP_ACCESS_TOKEN=your_access_token_here

# Webhook verify token (you create this - use a random string)
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here

# Webhook secret for signature verification (from Meta dashboard)
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret_here

# Google Calendar API Configuration
# Create a service account in Google Cloud Console
# Download the JSON key file and extract these values

# Service account email
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com

# Service account private key (replace \n with actual newlines)
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# xAI API Configuration
# Get your API key from: https://x.ai/

# xAI API key for Grok-4-fast model
XAI_API_KEY=your_xai_api_key_here

# Vercel KV (Redis) Configuration
# Automatically set by Vercel when you add KV storage
# No manual configuration needed if using Vercel KV

KV_URL=your_kv_rest_api_url
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_kv_rest_api_read_only_token

# Internal API Security (optional)
# Create a random string to secure internal API calls
INTERNAL_API_SECRET=your_random_secret_here

# Vercel Configuration (automatically set by Vercel)
VERCEL_URL=your-app.vercel.app
NODE_ENV=production

# Optional: Sentry or Error Tracking
# SENTRY_DSN=your_sentry_dsn_here
